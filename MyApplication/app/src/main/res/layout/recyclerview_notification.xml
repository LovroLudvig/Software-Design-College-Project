<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:padding="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/notif_picture"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:src= "@drawable/notification"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/notif_userName"
        android:layout_width="127dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25sp"
        android:layout_marginTop="0sp"
        android:layout_marginEnd="25sp"
        android:layout_toEndOf="@+id/notif_picture"
        android:text="Craftery admin"
        android:textColor="@color/AppColor"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/notif_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notif_userName"
        android:layout_alignStart="@+id/notif_picture"
        android:layout_alignTop="@id/notif_userName"
        android:layout_marginStart="75dp"
        android:paddingTop="25sp"
        android:text="Accepted your offer"
        android:textColor="@android:color/background_dark"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/notif_seeMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notif_picture"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:text="See more"
        android:textSize="12sp" />

</RelativeLayout>