<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:padding="10dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/notif_picture"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/frame_for_picture"
        android:src= "@drawable/random_picture"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/notif_name"
        android:layout_width="127dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25sp"
        android:layout_marginTop="33sp"
        android:layout_marginEnd="25sp"
        android:layout_toEndOf="@+id/notif_picture"
        android:fontFamily="@font/doppio_one"
        android:text="A new suggested story."
        android:textSize="16sp" />

    <TextView
        android:id="@+id/notif_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notif_name"
        android:layout_alignStart="@+id/notif_name"
        android:paddingTop="3sp"
        android:text="birbhat"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notif_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notif_name"
        android:layout_toEndOf="@+id/notif_price"
        android:paddingLeft="3sp"
        android:paddingTop="3sp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/notif_moreSyles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notif_price"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:text="See the story"
        android:textSize="12sp" />

</RelativeLayout>