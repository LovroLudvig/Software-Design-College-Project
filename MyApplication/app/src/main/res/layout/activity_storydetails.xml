<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/AppCOlorLight">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/AppColor"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/app_logo_text" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/imageAndVideo"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:background="@color/White">

                <include layout="@layout/layout_slideshow" />

                <Button
                    android:id="@+id/slide_number"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="75dp"
                    android:layout_height="25sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="7dp"
                    android:background="@color/AppGrey"
                    android:text="1 of 2"
                    android:textColor="@android:color/background_dark" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/card_background"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="13dp"
                    app:srcCompat="@drawable/circle" />

                <TextView
                    android:id="@+id/story_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/doppio_one"
                    android:text="Username"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    app:srcCompat="@color/AppGrey"></ImageView>

                <TextView
                    android:id="@+id/story_status"
                    android:layout_width="383dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginEnd="18dp"
                    android:fontFamily="@font/doppio_one"
                    android:text="This field is meant for peoples statuses and their boring shit they post when they buy something from this site."
                    android:textSize="15sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView29"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/doppio_one"
                    android:text="Comments"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0"
                    android:paddingRight="0dp"
                    app:srcCompat="@drawable/comment" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/comment_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:background="@drawable/card_background"
                android:paddingBottom="40dp" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <EditText
        android:id="@+id/addComment"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3sp"
        android:layout_marginTop="3sp"
        android:layout_marginLeft="2sp"
        android:layout_marginRight="2sp"
        android:background="@drawable/round_button5"
        android:hint="Add a comment..."
        android:inputType="textPersonName"
        android:paddingBottom="7sp"
        android:paddingLeft="10sp"
        android:paddingRight="60sp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/postBtn"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addComment"
        android:layout_alignTop="@+id/addComment"
        android:layout_marginBottom="5sp"
        android:text="Post"
        android:textColor="@color/AppColor"
        android:textSize="16sp" />




</RelativeLayout>



