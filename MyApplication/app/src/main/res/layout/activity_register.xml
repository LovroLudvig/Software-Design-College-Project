<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        app:srcCompat="@drawable/ic_arrow_back_black_24dp" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:paddingTop="40dp"
        android:focusableInTouchMode="true"
        android:isScrollContainer="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">





            <android.support.design.widget.TextInputLayout
                android:theme="@style/InputTheme"
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textColorHint="@color/White">

                <android.support.design.widget.TextInputEditText
                    android:theme="@style/InputTheme"
                    android:id="@+id/email_input"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:drawableLeft="@drawable/ic_email_white_24dp"
                    android:hint="E-mail"
                    android:inputType="textEmailAddress"
                    android:textColor="#dddddd"
                    android:textColorHint="#dddddd" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/InputTheme"
                android:id="@+id/username_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30sp"
                android:textColorHint="@color/White">

                <android.support.design.widget.TextInputEditText
                    android:theme="@style/InputTheme"
                    android:id="@+id/username_input"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    android:hint="Username"
                    android:inputType="text"
                    android:textColor="#dddddd"
                    android:textColorHint="#dddddd" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/InputTheme"
                android:id="@+id/password_layout"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="30sp"
                android:textColorHint="@color/White">

                <android.support.design.widget.TextInputEditText
                    android:theme="@style/InputTheme"
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="45sp"
                    android:drawableLeft="@drawable/ic_security_black_24dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="#dddddd"
                    android:textColorHint="#dddddd" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="50sp"
                android:layout_marginRight="30sp"
                style="@android:style/Widget.Material.Light.Button"

                android:layout_below="@+id/guest_login"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_button2"
                android:fontFamily="@font/doppio_one"
                android:text="Sign up with E-mail"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="By registering you are accepting our" />

            <TextView
                android:id="@+id/terms_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25sp"
                android:gravity="center"
                android:text="Terms of service."
                android:textColor="#fff"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>



</LinearLayout>