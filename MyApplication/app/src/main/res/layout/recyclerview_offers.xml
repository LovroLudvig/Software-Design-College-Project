<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:padding="10dp"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/offer_picture"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5sp"
        android:layout_marginTop="5sp"
        android:background="@drawable/frame_for_picture"
        android:src= "@drawable/random_picture"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/offer_name"
        android:layout_width="127dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="25sp"
        android:layout_marginTop="33sp"
        android:layout_marginEnd="25sp"
        android:layout_toEndOf="@+id/offer_picture"
        android:fontFamily="@font/doppio_one"
        android:text="Title of an item you are selling on a picture left"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/offer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offer_name"
        android:layout_alignStart="@+id/offer_name"
        android:paddingTop="3sp"
        android:text="7.99"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/offer_name"
        android:layout_toEndOf="@+id/offer_price"
        android:paddingLeft="3sp"
        android:paddingTop="3sp"
        android:text="HRK"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/more_styles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/offer_price"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:text="+More styles"
        android:textSize="12sp" />

</RelativeLayout>